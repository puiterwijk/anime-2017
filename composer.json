{
    "autoload": {
        "psr-4": {
            "Anime\\": "api/anime/"
        }
    },
    "require": {
        "php": ">=7.1.0",
        "nette/mail": "v3.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "6.0.*",
        "squizlabs/php_codesniffer": "3.0.0RC3"
    },
    "scripts": {
        "post-install-cmd": "Anime\\Services\\Utils::postInstall",
        "lint": "php vendor/squizlabs/php_codesniffer/bin/phpcs --colors --standard=phpcs.xml",
        "test": "php vendor/phpunit/phpunit/phpunit"
    }
}
